# API: set API_DOMAIN in .env (e.g. api.yourapp.com or localhost for local)
# read_timeout 600s keeps long-lived SSE connections (e.g. /workflow/status/{run_id}/stream) open
{$API_DOMAIN} {
	reverse_proxy api:8000 {
		transport http {
			read_timeout 600s
		}
	}
}

